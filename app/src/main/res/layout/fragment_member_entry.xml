<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.home.MemberEntryFragment">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="@dimen/space_3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_saveEntry"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/top_card_view"
                style="@style/carViewTheme">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_click"
                        style="@style/TitleTextViewTheme"
                        android:text="Income (Before coming into NRLM Fold)" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_5dp"
                android:layout_marginLeft="@dimen/space_5dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/light_green_50"
                android:outlineAmbientShadowColor="@color/green_500"
                android:outlineSpotShadowColor="@color/green_500"
                app:strokeWidth="1dp">


                <LinearLayout
                    android:layout_margin="@dimen/space_3dp"
                    android:padding="@dimen/space_3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SHG Member Name"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_semi_bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Of Joining: 11-March-206"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Entry Date"
                        android:textColor="@color/black"
                        android:fontFamily="@font/manrope_regular"/>




                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_5dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/light_green_50"
                android:outlineAmbientShadowColor="@color/green_500"
                android:outlineSpotShadowColor="@color/green_500"
                app:strokeWidth="1dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/space_3dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ttl_assignVehicle"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Select Sector"
                        android:padding="3dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/out_line_strok">

                        <AutoCompleteTextView
                            android:id="@+id/spinner_assignVehicle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/montserrat_regular"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Select Activity"
                        android:padding="3dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/out_line_strok">

                        <AutoCompleteTextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/montserrat_regular"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Income Frequency"
                        android:padding="3dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/out_line_strok">

                        <AutoCompleteTextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/montserrat_regular"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Income Range"
                        android:padding="3dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/out_line_strok">

                        <AutoCompleteTextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/montserrat_regular"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                    </com.google.android.material.textfield.TextInputLayout>



                    <LinearLayout
                        android:padding="@dimen/space_3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/space_10dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            style="@style/IconTextContainedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_semi_bold"
                            android:text="Add"
                            android:textAppearance="?attr/textAppearanceSmallPopupMenu"
                            app:cornerRadius="@dimen/text_20sp"
                            android:layout_marginRight="@dimen/space_10dp"
                            android:textSize="16sp" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/IconTextContainedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_semi_bold"
                            android:text="Reset"
                            android:textAppearance="?attr/textAppearanceSmallPopupMenu"
                            app:cornerRadius="@dimen/text_20sp"
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>




        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_saveEntry"
            style="@style/IconTextContainedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/manrope_semi_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Submit Detail's"
            android:textSize="16sp" />



    </RelativeLayout>
</layout>