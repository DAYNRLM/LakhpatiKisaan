            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_mpin_confirm"
                    android:fontFamily="@font/manrope_regular"
                    android:textColor="@color/black" />
                <com.chaos.view.PinView
                    android:id="@+id/pinview_second"
                    android:layout_gravity="center_horizontal"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:cursorVisible="true"
                    android:inputType="numberPassword"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_regular"
                    app:cursorColor="@color/green_500"
                    app:cursorWidth="2dp"
                    app:itemCount="4"
                    app:itemHeight="48dp"
                    app:itemRadius="4dp"
                    app:itemSpacing="0dp"
                    app:itemWidth="48dp"
                    app:lineColor="@color/green_500"
                    app:lineWidth="2dp"
                    app:viewType="rectangle" />


            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_setMpin"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/IconTextContainedButton"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/tv_mpin_set_mpin"
            android:textSize="16sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="@font/manrope_semi_bold" />


    </RelativeLayout>

