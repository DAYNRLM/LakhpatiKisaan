<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LakhpatiKisaan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LakhpatiKisaan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="IconTextContainedButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/green_500</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="carViewTheme" parent="Widget.MaterialComponents.CardView">

        <item name="strokeWidth">@dimen/space_1dp</item>
        <item name="strokeColor">@color/orange_200</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_marginLeft">@dimen/space_5dp</item>
        <item name="android:layout_marginRight">@dimen/space_5dp</item>
        <item name="android:layout_marginTop">@dimen/space_3dp</item>
        <item name="android:layout_marginBottom">@dimen/space_3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleTextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/orange_200</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space_5dp</item>
        <item name="android:padding">@dimen/space_3dp</item>
        <item name="fontFamily">@font/manrope_extra_bold</item>
    </style>

</resources>